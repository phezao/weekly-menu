<div class="dropdown">
  <button class="dropdown-toggle mt-4 font-bold text-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-offset="120,0">
  <%= @recipe.name %>
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <%= link_to "Editar receita", edit_recipe_path(@recipe), class: "dropdown-item" %>
    <%= link_to "Deletar receita", recipe_path(@recipe), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
  </div>
</div>
<div class="mt-3 bg-white rounded-xl shadow px-3 py-4">


    <div class="flex mb-4 items-end">
        <h1 class="font-bold">INGREDIENTES</h1>
        <%= link_to "Add", new_recipe_ingredient_path(@recipe), class: "bg-green-300 text-green-600 px-3 rounded-full ml-3 text-sm " %>
    </div>
    <ul>
    <% @recipe.ingredients.each do |ingredient| %>
        <div class="flex justify-between mb-3">
            <p><%= ingredient.name %></p>
            <div>
                <%= link_to "edit", edit_recipe_ingredient_path(@recipe, ingredient), class: "text-sm text-yellow-600 bg-yellow-300 rounded-full px-2" %>
                <%= link_to "delete", recipe_ingredient_path(@recipe, ingredient), method: :delete, data: {confirm: "Tem certeza que deseja apagar o ingrediente?"}, class: "text-red-600 bg-red-200 rounded-full px-2 text-sm " %>
            </div>
        </div>
    <% end %>
    </ul>
    <% unless @recipe.link.empty? %>
        <p><%= link_to "link para receita", @recipe.link, class: "bg-indigo-200 text-indigo-600 px-2 rounded", target: "_blank" %></p>
    <% end %>
    <p class="mt-8 text-center">
        <%= link_to "Adicionar para o menu", new_to_menu_recipe_path(@recipe), class: "bg-green-500 px-4 py-2 rounded-full text-white" %>
    </p>
</div>

