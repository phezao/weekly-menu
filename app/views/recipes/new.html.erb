<h1 class="font-semibold text-xl mb-3 mt-2">Adicionar receita</h1>
<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome da receita" %>
    <%= f.input :link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Adicionar ingredientes", class: "bg-green-500 text-white" %>
  </div>
<% end %>
