<h1 class="mt-4 text-xl font-bold">Todas as receitas</h1>


<ul>
<% @recipes.each do |recipe| %>

    <li><%= link_to recipe.name, recipe_path(recipe) %></li>

<% end %>

</ul>

<div class="flex flex-col">
    <%= link_to "Adicionar receita", new_recipe_path, class: "bg-red-400 px-4 py-2 rounded text-white font-semibold mx-auto my-4" %>

    <%= link_to "Menu da semana", menu_path(current_user.menu), class: "bg-green-600 px-4 py-2 rounded text-white font-semibold mx-auto" %>
</div>
