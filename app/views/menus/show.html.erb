    <div class="w-20 text-xs bg-gray-200 h-12 pt-2">receita 4</div>
    <div class="w-20 text-xs bg-gray-200 h-12 pt-2">receita 5</div>
    <div class="w-20 text-xs bg-gray-200 h-12 pt-2">receita 6</div>
</div>


