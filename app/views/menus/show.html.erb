<div class="my-4">
    <h1 class="text-4xl font-bold mb-2">Menu da semana</h1>
    <div class="flex mt-4 justify-around">

    <%= link_to "Gerar", menu_generate_path(current_user.menu), method: :post, class: "bg-blue-200 rounded-md text-blue-600 text-xs py-2 px-4 h-8 hover:no-underline hover:bg-blue-500 font-semibold", data: {confirm: "Quer gerar mesmo novo menu?"} %>
        <% unless @menu_recipes.empty? %>
            <%= link_to "Editar", edit_menu_path, class: "text-xs mx-2 bg-yellow-400 rounded-md h-8 py-2 px-4 hover:no-underline hover:bg-yellow-500 hover:text-black"  %>

            <%= link_to "Lista", menu_supermarket_ingredients_path(params[:id]), class: "text-xs bg-indigo-200 rounded-md h-8 py-2 px-4 text-indigo-800 font-semibold hover:no-underline hover:bg-indigo-500"  %>        
        <% end %>
    
    </div>
</div>


<div class="row">
    <div class="col-4 font-bold">Domingo</div>
