<div class="flex items-end sm:items-center">
    <h1 class="text-4xl font-bold my-6">Menu da semana</h1>
</div>


<table>
    <tr>
        <th>Domingo</th>
        <th>Segunda</th>
        <th>Terça</th>
    </tr>
    <tr>
        <td><%= @menu_recipes.where(day_of_the_week: "1").first.recipe.name if !@menu_recipes.where(day_of_the_week: "1").empty? %></td>
        <td><%= @menu_recipes.where(day_of_the_week: "2").first.recipe.name if !@menu_recipes.where(day_of_the_week: "2").empty? %></td>
        <td><%= @menu_recipes.where(day_of_the_week: "3").first.recipe.name if !@menu_recipes.where(day_of_the_week: "3").empty? %></td>
    </tr>
    <tr>
        <th>Quarta</th>
        <th>Quinta</th>
        <th>Sexta</th>
    </tr>
    <tr>
        <td><%= @menu_recipes.where(day_of_the_week: "4").first.recipe.name if !@menu_recipes.where(day_of_the_week: "4").empty? %></td>
        <td><%= @menu_recipes.where(day_of_the_week: "5").first.recipe.name if !@menu_recipes.where(day_of_the_week: "5").empty? %></td>
        <td><%= @menu_recipes.where(day_of_the_week: "6").first.recipe.name if !@menu_recipes.where(day_of_the_week: "6").empty? %></td>
    </tr>
    <tr>
        <th>Sábado</th>
    </tr>
    <tr>
        <td><%= @menu_recipes.where(day_of_the_week: "7").first.recipe.name if !@menu_recipes.where(day_of_the_week: "7").empty? %></td>
    </tr>
</table>


<div class="flex justify-between text-center">
    <div class="w-20 text-sm bg-gray-300 rounded">Domingo</div>
    <div class="w-20 text-sm bg-gray-300 rounded">Segunda</div>
    <div class="w-20 text-sm bg-gray-300 rounded">Terça</div>
</div>



